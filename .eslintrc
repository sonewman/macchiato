---
env:
  browser: true
  es6: true
  node: true

globals:
  describe: true
  it: true
  before: true
  beforeEach: true
  after: true
  afterEach: true
  xdescribe: true
  xit: true

ecmaFeatures:
  modules: true
  jsx: true

rules:
  semi:
    - 0
  quotes:
    - 1
    - single
  curly:
    - 1
    - multi-line
  yoda: 0
  no-underscore-dangle: 0
  curly: 0
  new-cap: 0
  no-use-before-define: 0
  no-unused-expressions: 0
  no-proto: 0
  semi-spacing: 0
  no-extra-semi: 0
  no-shadow: 0